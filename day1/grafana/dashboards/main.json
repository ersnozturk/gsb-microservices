{
  "annotations": { "list": [] },
  "title": "Microservices Dashboard",
  "uid": "microservices-main",
  "version": 2,
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "NGINX - Aktif Bağlantılar",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [{
        "expr": "nginx_connections_active",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "thresholds" } }
      }
    },
    {
      "id": 2,
      "title": "Backend1 - Toplam İstek",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [{
        "expr": "sum(http_requests_total{job=\"nodejs-backend1\"})",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "thresholds" } }
      }
    },
    {
      "id": 3,
      "title": "Backend2 - Toplam İstek",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [{
        "expr": "sum(http_requests_total{job=\"nodejs-backend2\"})",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "thresholds" } }
      }
    },
    {
      "id": 4,
      "title": "Aktif Instance Sayısı",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [{
        "expr": "count(up{job=~\"nodejs.*\"} == 1)",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "thresholds" } }
      }
    },
    {
      "id": 5,
      "title": "Backend1 - İstek Sayısı (instance bazlı)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [{
        "expr": "http_requests_total{job=\"nodejs-backend1\"}",
        "legendFormat": "{{instance}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": { "unit": "short" }
      }
    },
    {
      "id": 6,
      "title": "Backend2 - İstek Sayısı (instance bazlı)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [{
        "expr": "http_requests_total{job=\"nodejs-backend2\"}",
        "legendFormat": "{{instance}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": { "unit": "short" }
      }
    },
    {
      "id": 7,
      "title": "Node.js - Memory (Heap)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [{
        "expr": "nodejs_nodejs_heap_size_used_bytes",
        "legendFormat": "{{instance}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "id": 8,
      "title": "Node.js - CPU (%)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [{
        "expr": "rate(nodejs_process_cpu_seconds_total[1m]) * 100",
        "legendFormat": "{{instance}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": { "unit": "percent" }
      }
    }
  ]
}
